{
  "breakpoint": {
    "mobile": {
      "min": {
        "$type": "other",
        "$value": "0px",
        "$description": "Mobile breakpoint minimum width"
      },
      "max": {
        "$type": "other",
        "$value": "767px",
        "$description": "Mobile breakpoint maximum width"
      }
    }
  },
  "spacing": {
    "responsive": {
      "mobile": {
        "xs": {
          "$type": "spacing",
          "$value": "{spacing.base.1}",
          "$description": "Mobile extra small spacing"
        },
        "sm": {
          "$type": "spacing",
          "$value": "{spacing.base.2}",
          "$description": "Mobile small spacing"
        },
        "md": {
          "$type": "spacing",
          "$value": "{spacing.base.3}",
          "$description": "Mobile medium spacing"
        },
        "lg": {
          "$type": "spacing",
          "$value": "{spacing.base.4}",
          "$description": "Mobile large spacing"
        },
        "xl": {
          "$type": "spacing",
          "$value": "{spacing.base.6}",
          "$description": "Mobile extra large spacing"
        },
        "2xl": {
          "$type": "spacing",
          "$value": "{spacing.base.8}",
          "$description": "Mobile 2x large spacing"
        }
      }
    }
  },
  "size": {
    "responsive": {
      "mobile": {
        "font": {
          "xs": {
            "$type": "sizing",
            "$value": "0.75rem",
            "$description": "Mobile 12px font size"
          },
          "sm": {
            "$type": "sizing",
            "$value": "0.875rem",
            "$description": "Mobile 14px font size"
          },
          "base": {
            "$type": "sizing",
            "$value": "0.875rem",
            "$description": "Mobile 14px base font size"
          },
          "lg": {
            "$type": "sizing",
            "$value": "1rem",
            "$description": "Mobile 16px font size"
          },
          "xl": {
            "$type": "sizing",
            "$value": "1.125rem",
            "$description": "Mobile 18px font size"
          },
          "2xl": {
            "$type": "sizing",
            "$value": "1.25rem",
            "$description": "Mobile 20px font size"
          },
          "3xl": {
            "$type": "sizing",
            "$value": "1.5rem",
            "$description": "Mobile 24px font size"
          },
          "4xl": {
            "$type": "sizing",
            "$value": "1.875rem",
            "$description": "Mobile 30px font size"
          },
          "5xl": {
            "$type": "sizing",
            "$value": "2.25rem",
            "$description": "Mobile 36px font size"
          },
          "6xl": {
            "$type": "sizing",
            "$value": "2.75rem",
            "$description": "Mobile 44px font size"
          },
          "7xl": {
            "$type": "sizing",
            "$value": "3.25rem",
            "$description": "Mobile 52px font size"
          }
        }
      }
    }
  },
  "typography": {
    "responsive": {
      "mobile": {
        "display": {
          "large": {
            "$type": "typography",
            "$value": {
              "fontFamily": "{typography.reference.display.fontFamily}",
              "fontWeight": "{font.weight.black}",
              "fontSize": "{size.responsive.mobile.font.6xl}",
              "lineHeight": "{typography.reference.display.lineHeight}",
              "letterSpacing": "{typography.reference.display.letterSpacing}",
              "paragraphSpacing": "{typography.reference.display.paragraphSpacing}",
              "textCase": "{typography.reference.display.textCase}",
              "textDecoration": "{typography.reference.display.textDecoration}"
            },
            "$description": "Mobile large display text"
          },
          "medium": {
            "$type": "typography",
            "$value": {
              "fontFamily": "{typography.reference.display.fontFamily}",
              "fontWeight": "{font.weight.extrabold}",
              "fontSize": "{size.responsive.mobile.font.5xl}",
              "lineHeight": "{typography.reference.display.lineHeight}",
              "letterSpacing": "{typography.reference.display.letterSpacing}",
              "paragraphSpacing": "{typography.reference.display.paragraphSpacing}",
              "textCase": "{typography.reference.display.textCase}",
              "textDecoration": "{typography.reference.display.textDecoration}"
            },
            "$description": "Mobile medium display text"
          },
          "small": {
            "$type": "typography",
            "$value": {
              "fontFamily": "{typography.reference.display.fontFamily}",
              "fontWeight": "{font.weight.bold}",
              "fontSize": "{size.responsive.mobile.font.4xl}",
              "lineHeight": "{typography.reference.display.lineHeight}",
              "letterSpacing": "{typography.reference.display.letterSpacing}",
              "paragraphSpacing": "{typography.reference.display.paragraphSpacing}",
              "textCase": "{typography.reference.display.textCase}",
              "textDecoration": "{typography.reference.display.textDecoration}"
            },
            "$description": "Mobile small display text"
          }
        },
        "heading": {
          "large": {
            "$type": "typography",
            "$value": {
              "fontFamily": "{typography.reference.heading.fontFamily}",
              "fontWeight": "{font.weight.bold}",
              "fontSize": "{size.responsive.mobile.font.3xl}",
              "lineHeight": "{font.lineHeight.tight}",
              "letterSpacing": "{typography.reference.heading.letterSpacing}",
              "paragraphSpacing": "{typography.reference.heading.paragraphSpacing}",
              "textCase": "{typography.reference.heading.textCase}",
              "textDecoration": "{typography.reference.heading.textDecoration}"
            },
            "$description": "Mobile large heading"
          },
          "medium": {
            "$type": "typography",
            "$value": {
              "fontFamily": "{typography.reference.heading.fontFamily}",
              "fontWeight": "{font.weight.semibold}",
              "fontSize": "{size.responsive.mobile.font.xl}",
              "lineHeight": "{font.lineHeight.snug}",
              "letterSpacing": "{typography.reference.heading.letterSpacing}",
              "paragraphSpacing": "{typography.reference.heading.paragraphSpacing}",
              "textCase": "{typography.reference.heading.textCase}",
              "textDecoration": "{typography.reference.heading.textDecoration}"
            },
            "$description": "Mobile medium heading"
          },
          "small": {
            "$type": "typography",
            "$value": {
              "fontFamily": "{typography.reference.heading.fontFamily}",
              "fontWeight": "{font.weight.semibold}",
              "fontSize": "{size.responsive.mobile.font.lg}",
              "lineHeight": "{font.lineHeight.normal}",
              "letterSpacing": "{typography.reference.heading.letterSpacing}",
              "paragraphSpacing": "{typography.reference.heading.paragraphSpacing}",
              "textCase": "{typography.reference.heading.textCase}",
              "textDecoration": "{typography.reference.heading.textDecoration}"
            },
            "$description": "Mobile small heading"
          }
        },
        "body": {
          "large": {
            "$type": "typography",
            "$value": {
              "fontFamily": "{typography.reference.body.fontFamily}",
              "fontWeight": "{typography.reference.body.fontWeight}",
              "fontSize": "{size.responsive.mobile.font.lg}",
              "lineHeight": "{typography.reference.body.lineHeight}",
              "letterSpacing": "{typography.reference.body.letterSpacing}",
              "paragraphSpacing": "{typography.reference.body.paragraphSpacing}",
              "textCase": "{typography.reference.body.textCase}",
              "textDecoration": "{typography.reference.body.textDecoration}"
            },
            "$description": "Mobile large body text"
          },
          "medium": {
            "$type": "typography",
            "$value": {
              "fontFamily": "{typography.reference.body.fontFamily}",
              "fontWeight": "{typography.reference.body.fontWeight}",
              "fontSize": "{size.responsive.mobile.font.base}",
              "lineHeight": "{typography.reference.body.lineHeight}",
              "letterSpacing": "{typography.reference.body.letterSpacing}",
              "paragraphSpacing": "{typography.reference.body.paragraphSpacing}",
              "textCase": "{typography.reference.body.textCase}",
              "textDecoration": "{typography.reference.body.textDecoration}"
            },
            "$description": "Mobile standard body text"
          },
          "small": {
            "$type": "typography",
            "$value": {
              "fontFamily": "{typography.reference.body.fontFamily}",
              "fontWeight": "{typography.reference.body.fontWeight}",
              "fontSize": "{size.responsive.mobile.font.sm}",
              "lineHeight": "{font.lineHeight.normal}",
              "letterSpacing": "{typography.reference.body.letterSpacing}",
              "paragraphSpacing": "10px",
              "textCase": "{typography.reference.body.textCase}",
              "textDecoration": "{typography.reference.body.textDecoration}"
            },
            "$description": "Mobile small body text"
          }
        }
      }
    }
  }
}